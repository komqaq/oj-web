<%
this.adminPage = 'teams';
%>
<% include admin_header %>
<table class="ui center aligned celled table">
<thead>
  <tr>
    <th>序号</th>
    <th>名称</th>
  </tr>
</thead>

<tbody>
  <tr>
    <td><%= teams[0].id %></td>
    <td><%= teams[0].name %></td>
  </tr>
  <% for (let i = 1; i < teams.length; i++) { %>
    <tr>
      <td><%= teams[i].id %></td>
      <td><a href="<%= syzoj.utils.makeUrl(['team', teams[i].id]) %>"><%= teams[i].name %></a></td>
    </tr>
  <% } %>
</tbody>
</table>

<form method="post" class="ui form">
<h3>添加团队</h3>
<hr />
<div class="two fields">
	<div class="field">
		<label>团队名称</label>
		<input type="text" name="name" placeholder="name">
	</div>

	<div class="field">
		<label>&nbsp;</label>
		<button class="ui blue button">提交</button>
	</div>
</div>
</form>
<% include admin_footer %>
